<template name="cardType1"> 
    <view style="background:white;padding:15rpx 0rpx;">
        <view class="card-index-sec br-10">
            <image src="{{tmpCardData.avatar?tmpCardData.avatar:tmpCardData.default}}" mode="aspectFill" />
            <view class="user-card-info rel">
                <image class="circle-img abs" src="/longbing_card/resource/images/circle.png" />
                <image class="circle abs" src="{{tmpCardData.logo?tmpCardData.logo:tmpCardData.defaultLogo}}" mode="aspectFill" />
                <view class="tc name ellipsis">
                    {{tmpCardData.name?tmpCardData.name:'姓名'}}
                </view>
                <view class="tc ellipsis">
                    {{tmpCardData.job_name?tmpCardData.job_name:'职位'}}
                </view>
                <view class="tc ellipsis">
                    {{tmpCardData.company_name?tmpCardData.company_name:'公司名称'}}
                </view>
            </view>
        </view>
    </view>
</template>
<template name="cardType2">
    <view style="background:white;padding:15rpx 0rpx;">
        <view class="card-index-sec-2 br-10 rel">
            <image class="abs card-bg" src="http://retail.xiaochengxucms.com/images/12/2018/11/GTAVz7BVzjGyQb3ugnp832q08BQVii.png" mode="widthFix" />
            <image class="abs user-img" src="{{tmpCardData.avatar?tmpCardData.avatar:tmpCardData.default}}" mode="aspectFill" />
            <view class="abs user-info-sec">
                <image class="abs company-logo" src="{{tmpCardData.logo?tmpCardData.logo:tmpCardData.defaultLogo}}" mode="scaleToFill"/>
                <view class="company-name ellipsis">{{tmpCardData.company_short_name?tmpCardData.company_short_name:'公司简称'}}</view>
                <view class="user-name ellipsis"> {{tmpCardData.name?tmpCardData.name:'姓名'}}</view>
                <view class="job-name ellipsis"> {{tmpCardData.job_name?tmpCardData.job_name:'职位'}}</view>
                <view class="contact-info"><em class="abs tc circle"><i class="iconfont icon-shouji1"></i></em>{{tmpCardData.phone?tmpCardData.phone:'电话'}}</view>
                <view class="contact-info ellipsis"><em class="abs tc circle"><i class="iconfont icon-youxiang"></i></em>{{tmpCardData.email?tmpCardData.email:'邮箱'}}</view>
                <view class="contact-info ellipsis"><em class="abs tc circle"><i class="iconfont icon-dizhi"></i></em>{{tmpCardData.company_addr?tmpCardData.company_addr:'公司地址'}}</view>
                <!-- <view class="contact-info clamp2"><em class="abs tc circle"><i class="iconfont icon-dizhi"></i></em>{{tmpCardData.company_addr?tmpCardData.company_addr:'暂未填写'}}</view> -->
            </view>
        </view>
    </view>
</template>
